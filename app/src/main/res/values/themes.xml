<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TapToPayAndroid" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_off</item>
        <item name="colorSecondaryVariant">@color/gray_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Background color. -->
        <item name="colorOnBackground">@color/white</item>
        <item name="android:colorBackground">@color/background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <item name="toolbarStyle">@style/Theme.TapToPayAndroid.Toolbar</item>
    </style>

    <style name="Theme.TapToPayAndroid.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/orange</item>
        <item name="titleTextAppearance">@style/Title.M</item>
        <item name="titleTextColor">@color/white</item>
    </style>
</resources>